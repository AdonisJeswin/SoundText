{
  "manifest_version": 3,
  "name": "Text to Speech Reader",
  "version": "1.5",
  "description": "Reads selected text or the full page aloud with adjustable speed and controls.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon.png"
  }
}
